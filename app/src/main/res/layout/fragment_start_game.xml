<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_off"
    tools:context=".fragment.StartGameFragment">

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginEnd="16dp"
        android:src="@drawable/groww"
        app:layout_constraintBottom_toBottomOf="@+id/tvGrowwGame"
        app:layout_constraintEnd_toStartOf="@+id/tvGrowwGame"
        app:layout_constraintTop_toTopOf="@+id/tvGrowwGame" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvGrowwGame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/app_name"
        android:textSize="32sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvStartGame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="16dp"
        android:gravity="center"
        android:text="Enter your number to start your game"
        android:textColor="@color/blue"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvGrowwGame" />


    <NumberPicker
        android:id="@+id/npSelectNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvStartGame" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btStartGame"
        android:text="Start"
        android:layout_marginTop="16dp"
        android:textColor="@color/white_off"
        android:background="@color/blue"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@+id/npSelectNumber"
        app:layout_constraintStart_toStartOf="@+id/npSelectNumber"
        app:layout_constraintTop_toBottomOf="@+id/npSelectNumber" />
</androidx.constraintlayout.widget.ConstraintLayout>